{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1>Appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ appointment.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ appointment.location }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ appointment.phone }}</td>
            </tr>
            <tr>
                <th>IsBelowAgeLimit</th>
                <td>{{ appointment.isBelowAgeLimit ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Guardian</th>
                <td>{{ appointment.guardian }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ appointment.date }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ appointment.time }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ appointment.notes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_appointment_index') }}">back to list</a>

    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>

    {{ include('appointment/_delete_form.html.twig') }}
{% endblock %}
